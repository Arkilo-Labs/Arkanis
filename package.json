{
    "name": "arkanis",
    "version": "1.0.0",
    "description": "Arkanis Lens 交易决策实验环境 - JavaScript 重构版",
    "type": "module",
    "main": "src/index.js",
    "scripts": {
        "main": "node src/agents/lens/main.js",
        "backtest": "node src/agents/lens/backtest.js",
        "roundtable": "node src/cli/roundtable/main.js",
        "trade-roundtable": "node src/cli/roundtable/main.js",
        "trade-round-table": "node src/cli/roundtable/main.js",
        "db:setup": "node src/cli/db/setup.js",
        "db:migrate:core": "node src/cli/db/migrate.js core",
        "db:migrate:market": "node src/cli/db/migrate.js market",
        "lint": "eslint src/core src/cli src/agents",
        "format": "prettier --write \"src/core/**/*.js\" \"src/cli/**/*.js\" \"src/agents/**/*.js\" \"src/apps/server/**/*.{js,mjs}\"",
        "test": "node --test",
        "dev:server": "pnpm -C src/apps/server start",
        "dev:web": "pnpm -C src/apps/web dev",
        "dev:console": "pnpm -C src/apps/web dev",
        "web": "pnpm -C src/apps/web dev",
        "web:console": "pnpm -C src/apps/web dev"
    },
    "keywords": [
        "arkanis",
        "lens",
        "trading",
        "kline",
        "chart",
        "openai"
    ],
    "author": "",
    "license": "PolyForm-Noncommercial-1.0.0",
    "dependencies": {
        "axios": "^1.13.5",
        "ccxt": "^4.5.29",
        "chokidar": "^5.0.0",
        "commander": "^11.1.0",
        "dotenv": "^16.3.1",
        "lightweight-charts": "4.1.0",
        "node-pg-migrate": "^8.0.4",
        "node-telegram-bot-api": "^0.66.0",
        "pg": "^8.11.3",
        "puppeteer": "^24.0.0",
        "sharp": "^0.33.0",
        "yahoo-finance2": "^3.10.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "eslint": "^8.55.0",
        "prettier": "^3.1.1"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "pnpm": {
        "overrides": {
            "qs": "^6.13.0",
            "lodash": "^4.17.21",
            "tough-cookie": "^4.1.4",
            "ajv": "^8.17.1"
        }
    }
}
