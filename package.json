{
    "name": "vlm-trade-js",
    "version": "1.0.0",
    "description": "VLM 交易决策实验环境 - JavaScript 重构版",
    "type": "module",
    "main": "src/index.js",
    "scripts": {
        "main": "node scripts/main.js",
        "backtest": "node scripts/backtest.js",
        "db:setup": "node scripts/db/setup.js",
        "db:migrate:core": "node scripts/db/migrate.js core",
        "db:migrate:market": "node scripts/db/migrate.js market",
        "lint": "eslint src scripts",
        "format": "prettier --write \"src/**/*.js\" \"scripts/**/*.js\"",
        "test": "node --test",
        "server": "npm run start --prefix server",
        "web": "npm run dev --prefix web"
    },
    "keywords": [
        "vlm",
        "trading",
        "kline",
        "chart",
        "openai"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.0",
        "chokidar": "^5.0.0",
        "commander": "^11.1.0",
        "dotenv": "^16.3.1",
        "lightweight-charts": "4.1.0",
        "node-pg-migrate": "^8.0.4",
        "node-telegram-bot-api": "^0.66.0",
        "pg": "^8.11.3",
        "puppeteer": "^21.6.0",
        "sharp": "^0.33.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "eslint": "^8.55.0",
        "prettier": "^3.1.1"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
