// VLM Trade JS 环境变量配置示例
// 复制此文件为 .env 并填入实际值

// PostgreSQL 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=skeet
// 用于创建数据库时连接的“管理库”（通常是 postgres）
DB_ADMIN_DATABASE=postgres

// SaaS 商业化拆分：核心业务库 + 市场数据仓库
DB_CORE_DATABASE=arkilo_core
DB_MARKET_DATABASE=arkilo_market_data

// 兼容旧配置（不再推荐，若存在会被当作 market DB）
DB_DATABASE=arkilo_market_data
DB_POOL_MIN=2
DB_POOL_MAX=10

// VLM 配置
// Prompt 模板名称（位于 prompts 目录）
PROMPT_NAME=default

// 图表配置
CHART_WIDTH=1280
CHART_HEIGHT=720
CHART_VOLUME_PANE_HEIGHT=0.2
CHART_MACD_PANE_HEIGHT=0.15
CHART_TREND_STRENGTH_PANE_HEIGHT=0.15

// 日志配置
// 可选值: debug, info, warn, error, silent
LOG_LEVEL=info

// 默认参数
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_TIMEFRAME=5m
DEFAULT_BARS=200

// 市场数据源（目前只接了 binance）
MARKET_EXCHANGE=binance

// Telegram（可选：用于 Web 前端推送）
TG_BOT_TOKEN=
TG_CHAT_ID=
// 可选值: futures, spot（默认 futures）
BINANCE_MARKET=futures

// SaaS Console 管理员白名单（逗号分隔邮箱；为空则禁用管理员接口）
ARKILO_ADMIN_EMAILS=

// 用于加密存储组织的 AI Provider apiKey（生产必须配置；建议使用随机长字符串）
PROVIDER_SECRET=

// SaaS：前端公网地址（用于生成邮箱验证链接）
APP_PUBLIC_URL=http://localhost:5174

// 邮箱验证
EMAIL_VERIFY_TTL_MINUTES=60
EMAIL_VERIFY_RESEND_COOLDOWN_SECONDS=60

// 邮件发送（占位：不填 SMTP_HOST 时会使用本地假发送并输出到 server 控制台）
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
// 兼容部分供应商的“API Key”叫法
SMTP_API_KEY=
SMTP_FROM=no-reply@arkilo.dev

// Stripe（测试环境可用）
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
// 价格 ID（Stripe Dashboard -> Products -> Prices）
STRIPE_PRICE_MONTHLY=price_xxx
STRIPE_PRICE_YEARLY=price_xxx
