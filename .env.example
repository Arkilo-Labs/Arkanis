// VLM Trade JS 环境变量配置示例
// 复制此文件为 .env 并填入实际值

// PostgreSQL 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=skeet
DB_DATABASE=market_signals
DB_POOL_MIN=2
DB_POOL_MAX=10

// OpenAI API 配置
OPENAI_API_KEY=your-api-key
OPENAI_BASE_URL=https://api.ohmygpt.com
OPENAI_MODEL=ark-doubao-seed-1.6-flash-250715
OPENAI_MAX_TOKENS=8192
OPENAI_TEMPERATURE=0.2
OPENAI_TIMEOUT=240
OPENAI_ENABLE_THINKING=true

// 图表配置
CHART_WIDTH=1280
CHART_HEIGHT=720
CHART_VOLUME_PANE_HEIGHT=0.2

// 日志配置
// 可选值: debug, info, warn, error, silent
LOG_LEVEL=info

// 默认参数
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_TIMEFRAME=5m
DEFAULT_BARS=200
