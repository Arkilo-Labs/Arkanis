      "order": 2,
      "tools": [
        {
          "type": "mcp",
          "server": "trendradar",
          "call": {
            "method": "tools/call",
            "params": {
              "name": "get_latest_news",
              "arguments": {
                "platforms": null,
                "limit": 50,
                "include_url": false
              }
            }
          }
        }
      ]
    },
    {
      "name": "GPT_Technical",
      "provider_ref": "didl_gpt41_mini",
