{
  "version": 1,
  "roundtable_settings": {
    "max_rounds": 3,
    "summary_agent": "Gemini_Scribe",
    "final_agent": "DeepSeek_Leader",
    "max_context_chars": 24000,
    "llm_timeout_ms": 90000,
    "llm_retries": 1,
